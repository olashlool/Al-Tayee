@section Scripts
    {
        <script>
        $(".btn-list").click(function () {
        $("#switchStyle").removeClass("product-grid");
        $("#switchStyle").addClass("product-list");
        $(".btn-grid").removeClass("selected");
        $(".btn-list").addClass("selected");

    });
    $(".btn-grid").click(function () {
        $("#switchStyle").removeClass("product-list");
        $(".btn-list").removeClass("selected");
        $(".btn-grid").addClass("selected");
        $("#switchStyle").addClass("product-grid");
    });

    // Sorted By
    $(document).ready(function () {
        // Attach event handler to the select element
        $('#products-orderby').change(function () {
            // Get the selected option value
            var selectedOption = $(this).val();

            var searchTerm =@Html.Raw(Json.Serialize(ViewBag.SearchTerm))
            // Display an alert message with the selected value
            window.location.href = '/Search?searchTerm='+ searchTerm +'&&sortOrder=' + selectedOption;
        });
    });
    </script>
    <script>
        $(".AddToCart").on("click",async function () {
            debugger
            var productId = $(this).attr('data-product-Id')
        @if (User.Identity.IsAuthenticated)
        {
            <text>
                try {
                    var response = await fetch(`/Cart/AddItem?productId=${productId}`);
                    if (response.status == 200) {
                    location.reload();
                    }
                }
                catch (err) {
                    console.log(err);
                }
            </text>
        }
        else
        {
        <text>
                window.location.href="/Account/Login"
                    </text>
        }});

    </script>
    <script>
