@model Admin.Models.Addresses
@inject IHttpContextAccessor _httpContextAccessor

<div class="column-two-wrapper">
    <div class="container">
        @Html.Partial("_LeftSideAccount")
        <div class="center-2">
            <form method="post" asp-controller="Addresses" asp-action="Edit" novalidate="novalidate">
                <div class="page account-page address-edit-page">
                    <div class="page-title">
                        <h1>@Localizer["MyAccount"] - @Localizer["AddNewAddress"]</h1>
                    </div>
                    <div class="page-body">
                        <input type="hidden" data-val="true" asp-for="UserId" value="@_httpContextAccessor.HttpContext.User.Claims.FirstOrDefault().Value">
                        <div class="pr-1 edit-address">
                            <div class="form-row">
                                <div class="form-group no-label col-md-6"><span class="required">*</span> <input class="form-control" asp-for="FirstName" placeholder="@Localizer["FirstName"]" type="text" data-val="true" data-val-required="@Localizer["RequiredFirstName"]"> <span class="text-left field-validation-valid" data-valmsg-for="FirstName" data-valmsg-replace="true"></span></div>
                                <div class="form-group no-label col-md-6"><span class="required">*</span> <input class="form-control" asp-for="LastName" placeholder="@Localizer["LastName"]" type="text" data-val="true" data-val-required="@Localizer["RequiredLasrName"]"> <span class="text-left field-validation-valid" data-valmsg-for="LastName" data-valmsg-replace="true"></span></div>
                            </div>
                            <div class="form-group no-label"><span class="required">*</span> <input class="form-control" asp-for="Email" placeholder="@Localizer["Email"]" type="email" data-val="true" data-val-email="Wrong email" data-val-required="@Localizer["RequiredEmail"]"> <span class="text-left field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span></div>
                            <div class="form-row">
                                <div class="form-group no-label col-md-6">
                                    <span class="required">*</span>
                                    <select class="custom-select f-s-14" data-trigger="country-select" ata-val="true" asp-for="Country">
                                        <option value="Jordan">@Localizer["Jordan"]</option>
                                    </select>
                                    <span class="text-left field-validation-valid" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <select class="custom-select f-s-14" asp-for="City">
                                        <option value="0">@Localizer["SelectState"]</option>
                                        <option value="Amman">@Localizer["Amman"]</option>
                                        <option value="Irbid">@Localizer["Irbid"]</option>
                                        <option value="Zarqa">@Localizer["Zarqa"]</option>
                                        <option value="Jerash">@Localizer["Jerash"]</option>
                                        <option value="Ma_an">@Localizer["Ma_an"]</option>
                                        <option value="Al_Salt">@Localizer["Al_Salt"]</option>
                                        <option value="Ajloun">@Localizer["Ajloun"]</option>
                                        <option value="Aqaba">@Localizer["Aqaba"]</option>
                                        <option value="Tafilah">@Localizer["Tafilah"]</option>
                                        <option value="Madaba">@Localizer["Madaba"]</option>
                                        <option value="Mafraq">@Localizer["Mafraq"]</option>
                                        <option value="Karak">@Localizer["Karak"]</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group no-label"><span class="required">*</span> <input class="form-control" asp-for="Address1" placeholder="@Localizer["Address1"]" type="text" data-val="true" data-val-required="@Localizer["Address1"]" id="Address_Address1" name="Address1"> <span class="text-left field-validation-valid" data-valmsg-for="Address1" data-valmsg-replace="true"></span></div>
                            <div class="form-group no-label"><input class="form-control" asp-for="Address2" placeholder="@Localizer["Address2"]" type="text"> <span class="text-left field-validation-valid" data-valmsg-for="Address2" data-valmsg-replace="true"></span></div>
                            <div class="form-row">
                                <div class="form-group no-label col-md-6"><span class="required">*</span> <input class="form-control" asp-for="PhoneNumber" placeholder="@Localizer["PhoneNumber"]" type="tel" data-val="true" data-val-required="@Localizer["RequiredPhone"]" id="Address_PhoneNumber" name="PhoneNumber"> <span class="text-left field-validation-valid" data-valmsg-for="PhoneNumber" data-valmsg-replace="true"></span></div>
                                <div class="form-group no-label col-md-6"><input class="form-control" asp-for="FaxNumber" placeholder="@Localizer["FaxNumber"]" type="text" id="FaxNumber"> <span class="text-left field-validation-valid" data-valmsg-replace="true"></span></div>
                            </div>
                        </div>
                        <div class="buttons"><input type="submit" class="btn btn-primary btn-lg text-uppercase save-address-button" value="@Localizer["Save"]"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>