@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Admin.Models.ViewModels.LoginVM
@{
    Layout = null;
}
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Ekka - Admin Dashboard HTML Template.">
    <title>Al-Tayee fdn. Dashboard</title>
    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800&amp;family=Poppins:wght@300;400;500;600;700;800;900&amp;family=Roboto:wght@400;500;700;900&amp;display=swap" rel="stylesheet">
    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet">
    <!-- PLUGINS CSS STYLE -->
    <link href="/Admin/assets/plugins/simplebar/simplebar.css" rel="stylesheet">
    <!-- ekka CSS -->
    <link id="ekka-css" rel="stylesheet" href="/Admin/assets/css/ekka.css">
    <link id="ekka-css" rel="stylesheet" href="/Admin/assets/css/ekka.css">
    <!-- FAVICON -->
    <link href="/Admin/assets/img/favicon.png" rel="shortcut icon">
    <link href="~/Admin/Site.css" rel="stylesheet" />

    <link href="~/Admin/assets/plugins/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/Admin/assets/plugins/slick/slick.css" rel="stylesheet" />

</head>
<body class="ec-sidebar-fixed ec-header-light ec-header-static ec-sidebar-light" id="body" style="margin-top: 12vh;">
    <div class="container d-flex align-items-center justify-content-center form-height-login pt-24px pb-24px">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10" style="width: 75%;">
                <div class="card">
                    <div class="card-header bg-primary">
                        <div class="ec-brand">
                            <a title="al-tayee">
                                <img class="ec-brand-icon" src="/images/Al-Tayee-English-logo.png" alt="Al-tayee">
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-5">
                        <h4 class="text-dark mb-5">Sign In</h4>
                        <form method="post" asp-controller="Account" asp-action="Login">
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Username">
                                </div>
                                <div class="form-group col-md-12 ">
                                    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Password">
                                </div>
                                <div class="col-md-12">
                                    <div class="d-flex my-2 justify-content-between">
                                        <div class="d-inline-block mr-3"></div>
@*                                        <p><a class="text-blue" href="#">Forgot Password?</a></p>
*@                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign In</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Common Javascript -->
    <script src="~/Admin/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/assets/plugins/tags-input/bootstrap-tagsinput.js"></script>
    <script src="~/Admin/assets/plugins/simplebar/simplebar.min.js"></script>
    <script src="~/Admin/assets/plugins/jquery-zoom/jquery.zoom.min.js"></script>
    <script src="~/Admin/assets/plugins/slick/slick.min.js"></script>
    <!-- Option Switcher -->
    <script src="~/Admin/assets/plugins/options-sidebar/optionswitcher.js"></script>
    <!-- Ekka Custom -->
    <script src="~/Admin/assets/js/ekka.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
<grammarly-desktop-integration data-grammarly-shadow-root="true"></grammarly-desktop-integration>
</html>