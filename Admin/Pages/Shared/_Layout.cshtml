@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Security.Claims;
@inject IViewLocalizer Localizer
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Al_Tayee - Admin Dashboard.">
    <link rel="shortcut icon" href="~/images/Al-Tayee-fdn.-Icone.png" type="image/x-icon" />
    <title>Al-Tayee fdn. Dashboard</title>
    <!-- GOOGLE FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700;800&amp;family=Poppins:wght@300;400;500;600;700;800;900&amp;family=Roboto:wght@400;500;700;900&amp;display=swap" rel="stylesheet">
    <link href="https://cdn.materialdesignicons.com/4.4.95/css/materialdesignicons.min.css" rel="stylesheet">
    <!-- PLUGINS CSS STYLE -->
    <link href="/Admin/assets/plugins/simplebar/simplebar.css" rel="stylesheet">
    <!-- ekka CSS -->
    <link id="ekka-css" rel="stylesheet" href="/Admin/assets/css/ekka.css">
    <!-- FAVICON -->
    <link href="/Admin/assets/img/favicon.png" rel="shortcut icon">
    <link href="/Admin/assets/plugins/slick/slick-theme.css" rel="stylesheet" />
    <link href="/Admin/assets/plugins/slick/slick.css" rel="stylesheet" />

    @{
        string culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
        if (culture.StartsWith("en"))
        {
            <link href="/Admin/Site.css" rel="stylesheet" />
        }
        else if (culture.StartsWith("ar"))
        {
            <link href="/Admin/SiteAr.css" rel="stylesheet" />
        }
    }
</head>
<body class="ec-sidebar-fixed ec-header-light ec-header-static ec-sidebar-light" id="body" data-new-gr-c-s-check-loaded="14.1107.0" data-gr-ext-installed="">
    <!-- WRAPPER -->
    <div class="wrapper">
        <!-- LEFT MAIN SIDEBAR -->
        <div class="ec-left-sidebar ec-bg-sidebar">
            <div id="sidebar" class="sidebar ec-sidebar-footer">
                <div class="ec-brand">
                    <a href="/" title="Al-Tayee" style="padding: 11px;">
                        <img class="ec-brand-icon" id="AlTayeelogoAdmin" src="~/images/al-tayee-english-logo.png" alt="">
                    </a>
                </div>
                <!-- begin sidebar scrollbar -->
                <div class="ec-navigation" data-simplebar="init">
                    <div class="simplebar-wrapper" style="margin: 0px;">
                        <div class="simplebar-height-auto-observer-wrapper">
                            <div class="simplebar-height-auto-observer"></div>
                        </div>
                        <div class="simplebar-mask">
                            <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                                <div class="simplebar-ec-content-wrapper" style="height: 100%; overflow: hidden scroll;">
                                    <div class="simplebar-content" style="padding: 0px;">
                                        <!-- sidebar menu -->
                                        <ul class="nav sidebar-inner" id="sidebar-menu">
                                            <!-- Dashboard -->
                                            <li>
                                                <a class="sidenav-item-link" href="/">
                                                    <i class="mdi mdi-view-dashboard-outline"></i>
                                                    <span class="nav-text">@Localizer["Dashboard"]</span>
                                                </a>
                                                <hr>
                                            </li>
                                            <li>
                                                <a class="sidenav-item-link" href="/Brands">
                                                    <i class="mdi mdi-tag-faces"></i>
                                                    <span class="nav-text">@Localizer["Brands"]</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="sidenav-item-link" href="/Products">
                                                    <i class="mdi mdi-palette-advanced"></i>
                                                    <span class="nav-text">@Localizer["Products"]</span>
                                                </a>
                                            </li>

                                            <li>
                                                <a class="sidenav-item-link" href="/Order">
                                                    <i class="mdi mdi-cart"></i>
                                                    <span class="nav-text">@Localizer["Orders"]</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="sidenav-item-link" href="/Feedback" title="@Localizer["UserFeedback"]">
                                                    <i class="mdi mdi-account-group"></i>
                                                    <span class="nav-text">@Localizer["UserFeedback"]</span>
                                                </a>
                                                <hr>
                                            </li>
                                            <li>
                                                <a class="sidenav-item-link" href="/GridImage" title="@Localizer["GridImages"]">
                                                    <i class="mdi mdi-folder-multiple-image"></i>
                                                    <span class="nav-text">@Localizer["GridImages"]</span>
                                                </a>
                                            </li>
                                            <li>
                                                <a class="sidenav-item-link" href="/BackgroundSection" title="@Localizer["BackgroundSection"]">
                                                    <i class="mdi mdi-folder-image"></i>
                                                    <span class="nav-text">@Localizer["BackgroundSection"]</span>
                                                </a>
                                                <hr>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="simplebar-placeholder" style="width: auto; height: 818px;"></div>
                    </div>
                    <div class="simplebar-track simplebar-horizontal" style="visibility: hidden;">
                        <div class="simplebar-scrollbar" style="width: 0px; display: none;"></div>
                    </div>
                    <div class="simplebar-track simplebar-vertical" style="visibility: visible;">
                        <div class="simplebar-scrollbar" style="height: 25px; transform: translate3d(0px, 0px, 0px); display: block;"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- PAGE WRAPPER -->
        <div class="ec-page-wrapper">
            <!-- Header -->
            <header class="ec-main-header" id="header">
                <nav class="navbar navbar-static-top navbar-expand-lg">
                    <!-- Sidebar toggle button -->
                    <button id="sidebar-toggler" class="sidebar-toggle"></button>
                    <div class="search-form d-lg-inline-block"></div>
                    <!-- navbar right -->
                    <div class="navbar-right">
                        <ul class="nav navbar-nav">
                            <!-- User Account -->
                            <li class="dropdown user-menu">
                                <button class="dropdown-toggle nav-link ec-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="/Admin/assets/img/user/user.jpg" class="user-image" alt="User Image">
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right ec-dropdown-menu">
                                    <!-- User image -->
                                    <li class="dropdown-header">
                                        <img src="/Admin/assets/img/user/user.jpg" class="img-circle" alt="User Image">
                                        <div class="d-inline-block">
                                            @Localizer["Welcome"] @User.Identity.Name! <small class="pt-1">@User.FindFirst(ClaimTypes.Email)?.Value</small>
                                        </div>
                                    </li>
                                    <li class="dropdown-footer">
                                        <a asp-controller="Account" asp-action="Logout"> <i class="mdi mdi-logout"></i> @Localizer["LogOut"] </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown user-menu">
                                <button class="dropdown-toggle nav-link ec-drop" data-bs-toggle="dropdown" aria-expanded="false">
                                    @Thread.CurrentThread.CurrentUICulture.Name
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right ec-dropdown-menu">
                                    <!-- User image -->
                                    <li>
                                        <a href="/Dashboard/Change?culture=en">@Localizer["English"] </a>
                                    </li>
                                    <li class="dropdown-footer">
                                        <a href="/Dashboard/Change?culture=ar">@Localizer["Arabic"] </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- CONTENT WRAPPER -->
            @RenderBody()
            <div class="bg-white py-3 mb-5 mb-lg-0 footer-bottom" style="direction:rtl">
                <div class="container">
                    <div class="row justify-content-between mb-2 mb-lg-0">
                        <div class="col-12 col-lg-5 col-md-4 order-1 order-md-3">
                            <div class="footer-margin-text text-center text-md-right">Powered by <a id="majesticAgency" href="https://majesticagency.net/"><strong>Majestic</strong> Agency</a></div>
                        </div>
                        <div class="col-12 col-lg-5 col-md-4 mb-2 mb-md-0 order-2 order-md-1">
                            <p class="footer-margin-text text-center text-md-left f-s-14 clr-gray-d">@Localizer["Copyright"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Wrapper -->
    </div>

    <!-- End Wrapper -->
    <!-- Common Javascript -->
    <script src="~/Admin/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/Admin/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/Admin/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/assets/plugins/tags-input/bootstrap-tagsinput.js"></script>
    <script src="~/Admin/assets/plugins/simplebar/simplebar.min.js"></script>
    <script src="~/Admin/assets/plugins/jquery-zoom/jquery.zoom.min.js"></script>
    <script src="~/Admin/assets/plugins/slick/slick.min.js"></script>
    <!-- Option Switcher -->
    <script src="~/Admin/assets/plugins/options-sidebar/optionswitcher.js"></script>
    <!-- Ekka Custom -->
    <script src="~/admin/assets/js/ekka.js"></script>

    <script src="~/js/main.js"></script>
    @RenderSection("scripts", required: false)

</body>
<grammarly-desktop-integration data-grammarly-shadow-root="true"></grammarly-desktop-integration>
</html>